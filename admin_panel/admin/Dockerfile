FROM python:3.11-slim
WORKDIR /app

COPY ../../requirements.txt /tmp/requirements.txt
RUN pip install --no-cache-dir -r /tmp/requirements.txt

COPY admin/ /app

ENV PORT=8501
EXPOSE 8501

CMD ["streamlit","run","app.py", "--server.port=8501", "--server.enableCORS=false", "--server.enableXsrfProtection=false", "--server.fileWatcherType=none", "--browser.gatherUsageStats=false"]